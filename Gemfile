# frozen_string_literal: true

source "https://rubygems.org"

gem "jekyll-theme-chirpy", "~> 7.0", ">= 7.0.1"

group :test do
  gem "html-proofer", "~> 5.0"
end

# Gem to handle time zone conversions and calculations
gem "tzinfo"         # Convierte fechas y horas entre zonas horarias.

# Provides timezone data for tzinfo, required on Windows
gem "tzinfo-data"    # Proporciona datos de zonas horarias para tzinfo, necesario en Windows.

# Standard library for handling CSV files
gem "csv"            # Manipula archivos CSV (Comma-Separated Values).

# Standard library for encoding/decoding data in base64
gem "base64"         # Codifica y decodifica datos en base64.